# Aetherveil Sentinel Production Configuration
# This file contains production-specific settings

# Application Environment
ENVIRONMENT=production
DEBUG=false
TESTING=false

# Application Info
APP_NAME=Aetherveil Sentinel
APP_VERSION=1.0.0
APP_DESCRIPTION=Advanced Penetration Testing AI Agent

# Database Configuration - Production
DATABASE__SQLITE_PATH=/var/lib/aetherveil/aetherveil.db
DATABASE__SQLITE_POOL_SIZE=50
DATABASE__SQLITE_TIMEOUT=60

# Neo4j - Production Cluster
DATABASE__NEO4J_URI=bolt+s://neo4j-cluster.example.com:7687
DATABASE__NEO4J_USER=aetherveil_user
DATABASE__NEO4J_PASSWORD=${NEO4J_PASSWORD}
DATABASE__NEO4J_DATABASE=aetherveil
DATABASE__NEO4J_POOL_SIZE=100
DATABASE__NEO4J_TIMEOUT=60

# Redis - Production Cluster
DATABASE__REDIS_HOST=redis-cluster.example.com
DATABASE__REDIS_PORT=6379
DATABASE__REDIS_DB=0
DATABASE__REDIS_PASSWORD=${REDIS_PASSWORD}
DATABASE__REDIS_POOL_SIZE=50
DATABASE__REDIS_TIMEOUT=10

# Security Configuration - Production
SECURITY__ENCRYPTION_KEY=${ENCRYPTION_KEY}
SECURITY__JWT_SECRET=${JWT_SECRET}
SECURITY__JWT_ALGORITHM=HS256
SECURITY__JWT_EXPIRATION_HOURS=8

# API Security - Production
SECURITY__API_KEY_LENGTH=64
SECURITY__API_RATE_LIMIT=50
SECURITY__API_BURST_LIMIT=100

# Password Security - Production
SECURITY__PASSWORD_MIN_LENGTH=16
SECURITY__PASSWORD_REQUIRE_SPECIAL=true
SECURITY__PASSWORD_REQUIRE_NUMBERS=true
SECURITY__PASSWORD_REQUIRE_UPPERCASE=true
SECURITY__PASSWORD_HASH_ROUNDS=14

# Session Security - Production
SECURITY__SESSION_TIMEOUT_MINUTES=30
SECURITY__MAX_FAILED_ATTEMPTS=3
SECURITY__LOCKOUT_DURATION_MINUTES=30

# TLS/SSL - Production
SECURITY__TLS_ENABLED=true
SECURITY__TLS_CERT_PATH=/etc/ssl/certs/aetherveil.pem
SECURITY__TLS_KEY_PATH=/etc/ssl/private/aetherveil.key
SECURITY__TLS_CA_PATH=/etc/ssl/certs/ca-certificates.crt

# Network Configuration - Production
NETWORK__COORDINATOR_HOST=0.0.0.0
NETWORK__COORDINATOR_PORT=8000
NETWORK__COORDINATOR_WORKERS=8

# Agent Communication - Production
NETWORK__AGENT_HEARTBEAT_INTERVAL=15
NETWORK__AGENT_TIMEOUT=60

# ZMQ Configuration - Production
NETWORK__ZMQ_PORT=5555
NETWORK__ZMQ_HWM=10000
NETWORK__ZMQ_LINGER=5000

# gRPC Configuration - Production
NETWORK__GRPC_PORT=50051
NETWORK__GRPC_MAX_WORKERS=20
NETWORK__GRPC_MAX_MESSAGE_SIZE=8388608

# Load Balancer - Production
NETWORK__LOAD_BALANCER_ENABLED=true
NETWORK__LOAD_BALANCER_ALGORITHM=least_connections
NETWORK__HEALTH_CHECK_INTERVAL=15

# Connection Limits - Production
NETWORK__MAX_CONNECTIONS=5000
NETWORK__CONNECTION_TIMEOUT=60
NETWORK__KEEP_ALIVE_TIMEOUT=30

# GCP Configuration - Production
GCP__PROJECT_ID=tidy-computing-465909-i3
GCP__REGION=europe-west1
GCP__ZONE=europe-west1-b

# Storage - Production
GCP__STORAGE_BUCKET=aetherveil-production-storage
GCP__STORAGE_CLASS=STANDARD
GCP__BACKUP_BUCKET=aetherveil-production-backups

# Secret Manager - Production
GCP__SECRET_MANAGER_PREFIX=aetherveil-prod
GCP__SECRET_MANAGER_ENABLED=true

# Compute Engine - Production
GCP__COMPUTE_MACHINE_TYPE=e2-highmem-8
GCP__COMPUTE_DISK_SIZE=500
GCP__COMPUTE_DISK_TYPE=pd-ssd

# Kubernetes - Production
GCP__GKE_CLUSTER_NAME=aetherveil-production
GCP__GKE_NODE_COUNT=10
GCP__GKE_NODE_MACHINE_TYPE=e2-highmem-4

# Cloud Functions - Production
GCP__CLOUD_FUNCTIONS_REGION=europe-west1
GCP__CLOUD_FUNCTIONS_MEMORY=2048
GCP__CLOUD_FUNCTIONS_TIMEOUT=540

# Monitoring - Production
GCP__MONITORING_ENABLED=true
GCP__LOGGING_ENABLED=true
GCP__ALERTING_ENABLED=true

# Service Account - Production
GCP__SERVICE_ACCOUNT_PATH=/var/secrets/gcp-service-account.json

# Agent Configuration - Production
AGENT__MAX_AGENTS=500
AGENT__AGENT_SPAWN_RATE=10
AGENT__AGENT_LIFECYCLE_TIMEOUT=7200

# Resource Limits - Production
AGENT__MAX_CPU_PER_AGENT=1.0
AGENT__MAX_MEMORY_PER_AGENT=1024
AGENT__MAX_DISK_PER_AGENT=2048

# Communication - Production
AGENT__MESSAGE_QUEUE_SIZE=5000
AGENT__HEARTBEAT_INTERVAL=15
AGENT__DISCOVERY_INTERVAL=30

# Persistence - Production
AGENT__STATE_PERSISTENCE_ENABLED=true
AGENT__CHECKPOINT_INTERVAL=180

# Scaling - Production
AGENT__AUTO_SCALING_ENABLED=true
AGENT__SCALE_UP_THRESHOLD=0.7
AGENT__SCALE_DOWN_THRESHOLD=0.2

# Security - Production
AGENT__AGENT_ISOLATION_ENABLED=true
AGENT__SANDBOX_ENABLED=true

# Reinforcement Learning Configuration - Production
RL__ALGORITHM=PPO
RL__POLICY_TYPE=MlpPolicy
RL__LEARNING_RATE=0.0001
RL__BATCH_SIZE=128
RL__BUFFER_SIZE=1000000

# PPO Parameters - Production
RL__GAMMA=0.995
RL__EPSILON=0.15
RL__ENTROPY_COEF=0.005
RL__VALUE_COEF=0.5

# Training - Production
RL__TOTAL_TIMESTEPS=10000000
RL__EVAL_FREQ=50000
RL__SAVE_FREQ=100000

# Environment - Production
RL__ENV_NAME=AetherVeilEnv
RL__NUM_ENVS=8

# Checkpointing - Production
RL__CHECKPOINT_DIR=/var/lib/aetherveil/checkpoints
RL__MODEL_SAVE_PATH=/var/lib/aetherveil/models

# Hyperparameter Optimization - Production
RL__HYPEROPT_ENABLED=true
RL__HYPEROPT_TRIALS=100

# Stealth Configuration - Production
STEALTH__PROXY_ROTATION=true
STEALTH__PROXY_TIMEOUT=60
STEALTH__PROXY_RETRIES=5

# Traffic Shaping - Production
STEALTH__JITTER_MIN=1.0
STEALTH__JITTER_MAX=5.0
STEALTH__REQUEST_DELAY=2.0

# Tor Configuration - Production
STEALTH__TOR_ENABLED=true
STEALTH__TOR_PROXY=socks5://tor-proxy.internal:9050
STEALTH__TOR_CONTROL_PORT=9051

# Fingerprint Evasion - Production
STEALTH__FINGERPRINT_EVASION=true
STEALTH__RANDOMIZE_HEADERS=true
STEALTH__SPOOF_TIMEZONE=true

# Rate Limiting - Production
STEALTH__MAX_REQUESTS_PER_MINUTE=10
STEALTH__BURST_PROTECTION=true

# Logging Configuration - Production
LOGGING__LOG_LEVEL=INFO
LOGGING__LOG_FILE=/var/log/aetherveil/aetherveil.log
LOGGING__LOG_FILE_MAX_SIZE=104857600
LOGGING__LOG_FILE_BACKUP_COUNT=20

# Console Logging - Production
LOGGING__CONSOLE_LOGGING=false
LOGGING__CONSOLE_LOG_LEVEL=ERROR

# Structured Logging - Production
LOGGING__JSON_LOGGING=true
LOGGING__INCLUDE_TRACE=false

# Security Logging - Production
LOGGING__SECURITY_LOG_FILE=/var/log/aetherveil/security.log
LOGGING__AUDIT_LOG_FILE=/var/log/aetherveil/audit.log

# Performance Logging - Production
LOGGING__PERFORMANCE_LOGGING=true
LOGGING__SLOW_QUERY_THRESHOLD=0.5

# External API Keys - Production (loaded from Secret Manager)
SHODAN_API_KEY=${SHODAN_API_KEY}
CENSYS_API_ID=${CENSYS_API_ID}
CENSYS_API_SECRET=${CENSYS_API_SECRET}
VIRUSTOTAL_API_KEY=${VIRUSTOTAL_API_KEY}

# Feature Flags - Production
FEATURES__KNOWLEDGE_GRAPH=true
FEATURES__RL_OPTIMIZATION=true
FEATURES__STEALTH_MODE=true
FEATURES__DISTRIBUTED_SCANNING=true
FEATURES__AUTO_EXPLOITATION=false
FEATURES__AI_DECISION_MAKING=true
FEATURES__CONTINUOUS_LEARNING=true
FEATURES__THREAT_INTELLIGENCE=true