# Chimera Environment Configuration
# Copy this file to .env and fill in your actual values

# Core Configuration
CHIMERA_DEBUG=false
CHIMERA_LOG_LEVEL=INFO
CHIMERA_DATA_DIR=./data
CHIMERA_CONFIG_FILE=./config.yaml

# API Keys (for LLM collaboration - optional, uses web interfaces if not provided)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Proxy and Network Configuration
HTTP_PROXY=
HTTPS_PROXY=
SOCKS_PROXY=
TOR_PROXY=socks5://127.0.0.1:9050

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_USER_DATA_DIR=./data/browser_profiles
BROWSER_EXTENSIONS_DIR=./data/extensions

# Security and OPSEC
MAX_THREADS=4
REQUEST_DELAY_MIN=1.0
REQUEST_DELAY_MAX=5.0
RATE_LIMIT_PER_MINUTE=30
USER_AGENT_ROTATION=true

# Database Configuration
DATABASE_URL=sqlite:///./data/chimera.db
KNOWLEDGE_GRAPH_FILE=./data/knowledge/graph.db

# Notification and Reporting
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# Bug Bounty Platform Integration
HACKERONE_API_TOKEN=
BUGCROWD_API_TOKEN=
INTIGRITI_API_TOKEN=

# Sandbox and Validation
SANDBOX_TIMEOUT=300
VALIDATION_ENABLED=true
SAFETY_CHECKS_ENABLED=true

# Advanced Features
NEUROPLASTICITY_ENABLED=true
SELF_MODIFICATION_ENABLED=false
AUTO_UPDATE_ENABLED=false
TELEMETRY_ENABLED=false